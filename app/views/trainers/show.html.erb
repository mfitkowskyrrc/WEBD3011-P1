<p style="color: green"><%= notice %></p>

<%= render @trainer %>

<div>
  <h1>Pokemon Partners</h1>
  <% pokemon_partners = Pokemon.where(trainer_id: @trainer.id) %>
  <% pokemon_partners.each do |pokemon| %>
    <div>
      <h3><%= link_to pokemon.name, pokemon  %></h3>
    </div>

  <% end %>
</div>

<div class="btn-group">
  <a href=" <%= trainers_path %>" class="btn btn-primary" >Back to trainers</a>
  <a href="<%= edit_trainer_path(@trainer) %>" class="btn btn-primary">Edit this trainer</a>
  <%= button_to 'Destroy this trainer', @trainer, method: :delete, class: 'btn btn-danger' %>
</div>
